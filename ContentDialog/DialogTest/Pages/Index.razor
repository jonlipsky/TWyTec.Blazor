@page "/"

<div>
    <ul style="list-style-type: none;">
        <li>
            <button style="margin-top: 20px;" class="btn btn-primary" onclick="@ShowContentDialog">
                Show ContentDialog
            </button>
        </li>
        <li>
            <button style="margin-top: 20px;" class="btn btn-primary" onclick="@ShowAwaitContentDialog">
                Show ContentDialog await for close and change msg
            </button>
        </li>
    </ul>

    <p style="color: gainsboro;">
        msg: @_msg
    </p>
</div>



<ContentDialog ref="ContentDlg" aria-labelledby="myTestedModal">
    <div style="text-align: center;">
        <p id="myTestedModal">Hallo World</p>
        <button class="btn btn-primary" onclick="@CloseContentDialog">
            Close
        </button>
    </div>
</ContentDialog>

@functions{

    string _msg = "";
    private TWyTec.Blazor.ContentDialog ContentDlg { get; set; }

    void ShowContentDialog()
    {
        ContentDlg.Show();
    }

    async void ShowAwaitContentDialog()
    {
        _msg = "Dlg is open";

        await ContentDlg.ShowAsync();

        _msg = "Dlg is close";
        this.StateHasChanged();
    }

    void CloseContentDialog()
    {
        ContentDlg.Hide();
    }

}
